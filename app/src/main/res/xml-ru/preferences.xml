<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:title="Язык программы"
        android:defaultValue="@string/pref_lang_def"
        android:entries="@array/listLangNames"
        android:entryValues="@array/listLangValues"
        android:key="@string/pk_app_lang" />
    <CheckBoxPreference
        android:title="Отправлять информацию"
        android:summary="об устройстве вместе с дампом"
        android:defaultValue="true"
        android:key="@string/pk_send_platform_info" />
    <CheckBoxPreference
        android:title="VIEW_DIRECTORY"
        android:summary="для вызова файлового менеджера:\n - Да для X-plore или ES,\n - Нет для OI файловых менеджеров"
        android:defaultValue="false"
        android:key="@string/pk_use_view_directory" />
    <EditTextPreference
        android:defaultValue="@string/autodump_directory"
        android:key="@string/pk_dumps_directories"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Каталоги дампов через ;" />
</PreferenceScreen>
